{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],

    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "rootDir": "..",
    "outDir": "./dist",
    "noEmit": false
  },

  "include": [
    "src/**/*"
  ],

  "exclude": ["node_modules", "dist"]
}

